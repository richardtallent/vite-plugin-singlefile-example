{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
